return = getInt(&edad,"¿Cual es tu edad?","Rango valido [0 - 100]",1,100);
if(return == 0)
{
printf("La edad es: "%d",edad);
}
printf("Desea continuar? S/N");
scanf("%c",&respuesta);
}while(respuesta != N);
return 0;
 }
 
